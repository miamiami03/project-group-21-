    private void btnLoginActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnLoginActionPerformed
        // TODO add your handling code here:
         String un = txtUN.getText();
        String p = new String(txtPW.getPassword());
        
        if (txtUN.getText().equals("")) {
            JOptionPane.showMessageDialog(null, "Please fill out username");
        }
        else if (txtPW.getText().equals("")) {
            JOptionPane.showMessageDialog(null, "Please fill out password");
        }
        try {
        Class.forName("com.mysql.cj.jdbc.Driver");
            try (Connection conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/db_Rhea?useSSL=false","root","12345!@#$%a")) {
                Statement st = conn.createStatement();
                String sql = "Select * from tblUser where username='"+un+"' and password='"+p+"'";
                
                ResultSet rs=st.executeQuery(sql);
                
                if(rs.next()) {
                    dispose();
                    frmMenu menu = new frmMenu();
                    menu.show();
                }else {
                    JOptionPane.showMessageDialog(null, "Wrong Username and Password");
                    txtUN.setText("");
                    txtPW.setText("");
                }   }
 
        }
        catch (Exception e) {
        System.out.println(e.getMessage());
    }
    }//GEN-LAST:event_btnLoginActionPerformed



